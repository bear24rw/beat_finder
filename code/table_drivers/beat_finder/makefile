CC = gcc
CFLAGS = -g -Wall -O2 -lGL -lGLU -lm -lSDL_image -lfftw3 -lftdi -lasound -lpthread `sdl-config --cflags --libs`
OBJECTS = main.o fft.o draw.o table.o serial.o

main : $(OBJECTS)
		$(CC) $(CFLAGS) $(OBJECTS) -o main

%.o : %.c
		$(CC) $(CFLAGS) -c $<

clean:
	@echo Cleaning up...
	rm -fr *.o main
	@echo Done.
